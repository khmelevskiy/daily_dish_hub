root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python: 4-space indents
[*.py]
indent_size = 4

# Markdown: keep intentional trailing spaces (line breaks)
[*.md]
trim_trailing_whitespace = false

# TOML
[*.toml]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Web files
[*.{js,jsx,ts,tsx,css,scss,html}]
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

